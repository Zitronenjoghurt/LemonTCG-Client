#:kivy 2.0

<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            MDLabel:
                text: 'LemonTCG'
                font_size: 40
                bold: True
                halign: 'center'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.5
            pos_hint: {'center_x': 0.5}

            MDButton:
                style: "elevated"
                pos_hint: {"center_x": .5, "center_y": .5}

                MDButtonIcon:
                    icon: "plus"

                MDButtonText:
                    text: "Elevated"

            MDButton:
                style: "elevated"
                pos_hint: {"center_x": .5, "center_y": .5}

                MDButtonIcon:
                    icon: "plus"

                MDButtonText:
                    text: "Elevated"

            MDButton:
                style: "elevated"
                pos_hint: {"center_x": .5, "center_y": .5}

                MDButtonIcon:
                    icon: "plus"

